{
  "name": "elise",
  "version": "2.1.0",
  "description": "rest api made with node, express, and typescript",
  "repository": "https://github.com/archisdi/elise",
  "main": "index.js",
  "scripts": {
    "serve": "nodemon",
    "build": "sh ./scripts/deployment/build.sh",
    "build-docker": "sh ./scripts/deployment/build-docker.sh",
    "clean-install": "rm -rf node_modules package-lock.json && npm install",
    "test": "NODE_ENV=test nyc ava --verbose",
    "lint": "eslint './src/**/*.{js,ts}' --fix",
    "migrate": "./scripts/migration/migrate.sh",
    "migrate:rollback": "./scripts/migration/rollback.sh",
    "migrate:refresh": "./scripts/migration/refresh.sh",
    "migrate:seed": "./scripts/migration/seed.sh"
  },
  "author": "Archie Isdiningrat",
  "license": "ISC",
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.1.7",
    "@types/dotenv": "^6.1.1",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/randomstring": "^1.1.6",
    "@types/sinon": "^7.0.13",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "ava": "^3.12.1",
    "eslint": "^7.2.0",
    "nodemon": "^2.0.4",
    "nyc": "^14.1.1",
    "sequelize-cli": "^6.0.0",
    "sinon": "^7.3.2",
    "ts-node": "^8.3.0",
    "typescript": "~4.0.2"
  },
  "dependencies": {
    "@archisdi/zuu": "github:archisdi/zuu",
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.0.0",
    "joi": "^17.2.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "pg": "^8.6.0",
    "randomstring": "^1.1.5",
    "uuid": "^3.3.2"
  },
  "ava": {
    "babel": {
      "compileEnhancements": false
    },
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ],
    "files": [
      "./tests/**/*.test.ts"
    ]
  }
}
